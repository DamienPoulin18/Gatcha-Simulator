            { name: "Diamond", rarity: "Rare", weight: 16.0, price: 600000, img: wiki+"3/36/Diamond_%28Physical%29.png" },
            { name: "Ice", rarity: "Uncommon", weight: 20.0, price: 350000, img: wiki+"3/30/Ice_%28Physical%29.png" },
            { name: "Flame", rarity: "Uncommon", weight: 25.0, price: 250000, img: wiki+"0/03/Flame_%28Physical%29.png" },
            { name: "Sand", rarity: "Uncommon", weight: 28.0, price: 420000, img: wiki+"7/79/Sand_%28Physical%29.png" },
            { name: "Dark", rarity: "Uncommon", weight: 30.0, price: 500000, img: wiki+"a/a4/Dark_%28Physical%29.png" },
            { name: "Falcon", rarity: "Uncommon", weight: 32.0, price: 300000, img: wiki+"a/a9/Falcon_%28Physical%29.png" },
            { name: "Rocket", rarity: "Common", weight: 60.0, price: 5000, img: wiki+"d/d5/Rocket_%28Physical%29.png" },
            { name: "Spin", rarity: "Common", weight: 55.0, price: 7500, img: wiki+"9/91/Spin_%28Physical%29.png" },
            { name: "Chop", rarity: "Common", weight: 50.0, price: 30000, img: wiki+"a/a2/Chop_%28Physical%29.png" }
        ];

        function getDrop() {
            const total = fruits.reduce((acc, f) => acc + f.weight, 0);
            let random = Math.random() * total;
            for (let f of fruits) { if (random < f.weight) return f; random -= f.weight; }
        }

        function createCard(f, small = false) {
            const color = `var(--${f.rarity.toLowerCase()})`;
            let actions = !small ? `<div class="card-actions">
                <button class="btn-action" style="background:#b8860b" onclick="toggleFav('${f.id}')">${f.isFavorite?'ðŸ”’':'â˜†'}</button>
                <button class="btn-action" style="background:#ef4444" ${f.isFavorite?'disabled':''} onclick="sell('${f.id}')">VENDRE</button>
            </div>` : "";
            return `<div class="fruit-card ${f.isFavorite?'is-fav':''}" style="border-bottom: 4px solid ${color}; ${small?'min-width:100px; height:130px; font-size:0.6rem;':''}">
                <div class="card-header">${f.name}</div>
                <div class="card-img-container"><img src="${proxy + f.img}" class="fruit-img" ${small?'style="width:35px; height:35px;"':''}></div>
                <div class="card-footer" style="background:${color}">${f.rarity}</div>
                ${actions}
            </div>`;
        }

        function spin() {
            if (beli < 50000) return alert("Pas assez de Beli !");
            beli -= 50000; updateHUD();
            const track = document.getElementById('track');
            const winner = getDrop();
            const winIdx = 35;

            track.classList.add('scrolling');
            let loopContent = "";
            for(let i=0; i<15; i++) loopContent += createCard(fruits[Math.floor(Math.random()*fruits.length)], true);
            track.innerHTML = loopContent + loopContent;

            setTimeout(() => {
                track.classList.remove('scrolling');
                track.innerHTML = "";
                for(let i=0; i<50; i++) track.innerHTML += createCard(i === winIdx ? winner : getDrop(), true);
                track.style.transition = "none";
                track.style.transform = "translateX(0)";

                setTimeout(() => {
                    track.style.transition = "transform 5s cubic-bezier(0.1, 0, 0, 1)";
                    track.style.transform = `translateX(${- (winIdx * 138) + 400 - 69}px)`;
                }, 50);

                setTimeout(() => {
                    inventory.push({...winner, id: Date.now(), isFavorite: false});
                    xp += 20; if(xp>=100){ xp=0; lvl++; alert("LEVEL UP!"); }
                    renderInv(); updateHUD();
                }, 5500);
            }, 1500);
        }

        function updateHUD() {
            document.getElementById('money-val').innerText = beli.toLocaleString();
            document.getElementById('lvl-val').innerText = lvl;
            document.getElementById('xp-val').innerText = xp;
        }

        function renderInv() { document.getElementById('inventory-list').innerHTML = inventory.slice().reverse().map(f => createCard(f)).join(''); }
        function toggleFav(id) { const f = inventory.find(i=>i.id==id); f.isFavorite = !f.isFavorite; renderInv(); }
        function sell(id) { const i = inventory.findIndex(f=>f.id==id); beli += inventory[i].price; inventory.splice(i,1); updateHUD(); renderInv(); }
        function sellAll() { inventory.filter(f=>!f.isFavorite).forEach(f => beli += f.price); inventory = inventory.filter(f=>f.isFavorite); updateHUD(); renderInv(); }

        // --- TRADE ---
        function openTrade() { document.getElementById('trade-overlay').style.display = 'flex'; }
        function closeTrade() { document.getElementById('trade-overlay').style.display = 'none'; myOffer = []; }
        function openSelection() {
            if(!inventory.length) return alert("Inventaire vide !");
            let f = inventory[Math.floor(Math.random()*inventory.length)]; // Simulation simple
            if(myOffer.length < 4) {
                myOffer.push(f);
                document.getElementById('my-trade').innerHTML = myOffer.map(o => createCard(o, true)).join('');
                document.getElementById('my-val').innerText = myOffer.reduce((a,b)=>a+b.price,0).toLocaleString();
                document.getElementById('trade-status').innerText = "L'adversaire rÃ©flÃ©chit...";
                setTimeout(aiOffer, 2000);
            }
        }
        function aiOffer() {
            const v = myOffer.reduce((a,b)=>a+b.price,0);
            const best = [...fruits].sort((a,b)=>b.price-a.price).find(f => f.price <= v * 1.2) || fruits[fruits.length-1];
            theirOffer = [best];
            document.getElementById('their-trade').innerHTML = createCard(best, true);
            document.getElementById('their-val').innerText = best.price.toLocaleString();
            document.getElementById('trade-status').innerText = "Offre prÃªte !";
        }
        function handleAccept() {
            if(!myOffer.length) return;
            myOffer.forEach(o => inventory = inventory.filter(i=>i.id!=o.id));
            inventory.push({...theirOffer[0], id: Date.now()});
            alert("Ã‰change rÃ©ussi !"); closeTrade(); renderInv();
        }

        updateHUD();
    </script>

</body></html>
