    <script>
        let beli = 500000, xp = 0, lvl = 1, inventory = [], myOffer = [], theirOffer = [];
        const proxy = "https://images.weserv.nl";
        const wiki = "static.wikia.nocookie.net/blox-fruits/images/";

        // LISTE COMPLÃˆTE DES FRUITS (57 FRUITS)
        const fruits = [
